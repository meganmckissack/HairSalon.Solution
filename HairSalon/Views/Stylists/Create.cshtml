@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  <input class="btn btn-color" href="#" role="button" type="submit" value="Add new stylist" />
}
<p class="btn btn-color" href="#" role="button">@Html.ActionLink("Show all stylists", "Index")</p